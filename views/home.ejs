
<%-  include ('../partials/header') %>

<div class = 'container'>

 <div class = 'row text-center' >
        <% articles.forEach(function(write){ %>
            <div class = 'col-md-6 col-sm-6 col-lg-4'>
                <div class = 'card'>
                    <div class = 'card-title'>
                            <h4>  <%= write.title %> </h4>
                    </div>
                        <img src="<%= write.imageUrl %>">
                    </div>              
                               
                    <div class = 'card-body'>
                            <p class = 'card-text'>  <%= write.article.substring(0, 100) %>...</p>
                
                           <a href="/home/<%= write._id%>" class="btn btn-primary">More</a> 
                    </div>  
                    
         </div>
    <% }) %>
    
 </div>       
</div>


<%- include ('../partials/footer') %>